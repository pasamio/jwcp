    <version>1.5.$Rev$</version>
    <description>This component manages working copies of the live site</description>

    <installfile></installfile>
    <uninstallfile></uninstallfile>

    <install>
        <queries>
            <query>
                CREATE TABLE `#__wcp` (
                    `id` int(11) unsigned NOT NULL AUTO_INCREMENT,
                    `sid` int(11) NOT NULL DEFAULT '0',
                    `name` varchar(250) NOT NULL DEFAULT '',
                    `parent_sid` varchar(250) NOT NULL DEFAULT '',
                    `path` varchar(250) NOT NULL DEFAULT '',
                    `params` text,
                    PRIMARY KEY (`id`),
                    UNIQUE KEY `id` (`id`)
                ) ENGINE=MyISAM DEFAULT CHARSET=utf8
            </query>
        </queries>
    </install>

    <uninstall>
        <queries>
            <query>drop table if exists #__wcp</query>
        </queries>
    </uninstall>

    <administration>
        <menu img="components/com_wcp/images/wcp.png">Working Copy</menu>

        <files>
            <!-- TODO: add all files -->
            <filename>index.html</filename>
            <filename>admin.wcp.php</filename>
            <filename>controller.php</filename>
            <filename>images/index.html</filename>
            <filename>images/wcp.png</filename>
            <filename>tables/index.html</filename>
            <filename>tables/wcp.php</filename>
            <filename>views/index.html</filename>
            <filename>views/child/index.html</filename>
            <filename>views/child/view.html.php</filename>
            <filename>views/child/tmpl/index.html</filename>
            <filename>views/child/tmpl/default.php</filename>
            <filename>views/childs/index.html</filename>
            <filename>views/childs/view.html.php</filename>
            <filename>views/childs/tmpl/index.html</filename>
            <filename>views/childs/tmpl/default.php</filename>
            <filename>models/index.html</filename>
            <filename>models/childs.php</filename>
            <filename>helpers/index.html</filename>
            <filename>helpers/wcp.php</filename>
        </files>

        <languages folder="languages">
            <language tag="en-GB">en-GB.com_wcp.ini</language>
        </languages>
    </administration>
</install>