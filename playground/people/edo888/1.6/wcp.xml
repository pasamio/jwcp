    <description>COM_WCP_XML_DESCRIPTION</description>

    <installfile></installfile>
    <uninstallfile></uninstallfile>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <administration>
        <menu img="components/com_wcp/images/wcp.png">Working Copy</menu>

        <files>
            <filename>index.html</filename>
            <filename>admin.wcp.php</filename>
            <filename>controller.php</filename>
            <filename>helper.php</filename>
            <filename>license.txt</filename>
            <folder>images</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>models</folder>
            <folder>help</folder>
        </files>

        <languages folder="languages">
            <language tag="en-GB">en-GB.com_wcp.ini</language>
        </languages>
    </administration>
</extension>